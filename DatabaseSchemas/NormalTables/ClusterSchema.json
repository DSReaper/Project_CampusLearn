{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cluster",
  "description": "A subject cluster or department",
  "type": "object",
  "properties": {
    "ClusterID": {
      "type": "integer",
      "description": "Primary key for cluster",
      "minimum": 1,
      "maximum": 9999
    },
    "Name": {
      "type": "string",
      "description": "Name of the cluster",
      "minLength": 3,
      "maxLength": 50
    },
    "Description": {
      "type": "string",
      "description": "Description of the cluster",
      "minLength": 10,
      "maxLength": 250
    }
  },
  "required": ["ClusterID", "Name"],
  "additionalProperties": false
}