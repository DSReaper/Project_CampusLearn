{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Module",
  "description": "An academic module/course",
  "type": "object",
  "properties": {
    "ModuleID": {
      "type": "integer",
      "description": "Primary key for module",
      "minimum": 1,
      "maximum": 999999
    },
    "ClusterID": {
      "type": "integer",
      "description": "Foreign key to Cluster",
      "minimum": 1,
      "maximum": 9999
    },
    "DegreeID": {
      "type": "integer",
      "description": "Foreign key to Degree",
      "minimum": 1,
      "maximum": 9999
    },
    "ModuleNo": {
      "type": "string",
      "description": "Module identification code",
      "pattern": "^[A-Z]{3}[0-9]{3}",
      "minLength": 6,
      "maxLength": 6
    },
    "ModuleName": {
      "type": "string",
      "description": "Name of the module",
      "minLength": 5,
      "maxLength": 100
    },
    "Description": {
      "type": "string",
      "description": "Detailed description of the module",
      "minLength": 10,
      "maxLength": 500
    }
  },
  "required": ["ModuleID", "ClusterID", "DegreeID", "ModuleNo", "ModuleName"],
  "additionalProperties": false
}